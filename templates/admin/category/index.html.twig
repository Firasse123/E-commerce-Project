{% extends 'admin/base.html.twig' %}

{% block title %}Catégories - Administration{% endblock %}

{% block page_title %}
    <i class="bi bi-tags me-2"></i>Liste des catégories
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Toutes les catégories</h5>
        <a href="{{ path('admin_category_new') }}" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Ajouter une catégorie
        </a>
    </div>
    <div class="card-body">
        {% if categories is not empty %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td>
                                    </a>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-4">
                <i class="bi bi-tags" style="font-size: 3rem; color: #ccc;"></i>
                <p class="text-muted mt-2">Aucune catégorie enregistrée</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
