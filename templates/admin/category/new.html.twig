{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter une catégorie - Administration{% endblock %}

{% block page_title %}
    <i class="bi bi-plus-circle me-2"></i>Ajouter une catégorie
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h5>Nouvelle catégorie</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.name) }}

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Enregistrer
                </button>
            {{ form_end(form) }}
        </div>
    </div>

    <a href="{{ path('admin_category_index') }}" class="btn btn-link mt-3">
        <i class="bi bi-arrow-left me-1"></i> Retour à la liste des catégories
    </a>
{% endblock %}
