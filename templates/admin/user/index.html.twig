{% extends 'admin/base.html.twig' %}

{% block title %}Utilisateurs - Administration{% endblock %}

{% block page_title %}
    <i class="bi bi-people me-2"></i>Liste des utilisateurs
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Utilisateurs enregistrés</h5>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Rôle(s)</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles|join(', ') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
